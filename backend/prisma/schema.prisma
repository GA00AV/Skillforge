generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  profileImg String @default("https://picsum.photos/200")
  notifications Notification[]
  enrolledCourses Course[] @relation("enrollments")
  createdCourses Course[] @relation("instructor")
}
model Course{
  id String @id @default(uuid())
  title String?
  description String?
  category String?
  thumbnail String?
  lastUpdate DateTime @updatedAt
  price Float?
  status String
  sections Section[]
  students User[] @relation("enrollments")
  instructorId String
  instructor User @relation("instructor", fields: [instructorId], references: [id])
}

model Section{
  id String @id @default(uuid())
  title String
  courseId String
  course Course @relation(fields: [courseId], references: [id])
  lectures Lecture[]
}
model Lecture {
  id String @id @default(uuid())
  title String 
  duration Int
  src String?
  description String
  sectionID String
  section Section @relation(fields: [sectionID], references: [id])
}

model Notification{
  id String @id @default(uuid())
  title String 
  type String
  message String
  sentTime DateTime
  userId String
  user User @relation(fields: [userId], references: [id])
}
